{
  "manifest_version": 3,
  "name": "QuillBot AI Detector (Prototype)",
  "version": "0.3.0",
  "description": "Detect likelihood that text was generated by AI.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": { "service_worker": "background.js" },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["http://localhost:5050/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}